<IfModule mod_rewrite.c>
    Options -Multiviews
    RewriteEngine On
    RewriteBase /SportsFieldsManagement/public/

    # Si el archivo o carpeta existe, no reescribir
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f

    # Reescribir todo lo dem√°s a index.php?url=...
    RewriteRule ^(.+)$ index.php?url=$1 [QSA,L]
</IfModule>
